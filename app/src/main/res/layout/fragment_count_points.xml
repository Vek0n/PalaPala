<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/countPointsFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.szymonkaczmarek.palapala.CountPointsFragment">


    <Spinner
        android:id="@+id/spinnerCountPoints"
        android:layout_width="227dp"
        android:layout_height="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintTop_toBottomOf="@+id/chooseLanguageText"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/chooseLanguageText"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/chooseLanguageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose language"
        android:textSize="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintBottom_toTopOf="@+id/spinnerCountPoints"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="13dp"
        app:layout_constraintVertical_bias="0.219"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/buttonCountPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonCountPoints"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="307dp"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/textViewPoints"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/editTextCountPoints"
        android:layout_width="261dp"
        android:layout_height="42dp"
        android:ems="10"
        android:hint="Type word"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/spinnerCountPoints"
        tools:layout_editor_absoluteY="135dp"
        tools:layout_editor_absoluteX="44dp"
        android:layout_below="@+id/spinnerCountPoints"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textViewPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="@string/countPointsPoints"
        android:textSize="50sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextCountPoints"
        app:layout_constraintVertical_bias="0.468"
        app:layout_constraintBottom_toTopOf="@+id/buttonCountPoints"
        android:layout_below="@+id/editTextCountPoints"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
